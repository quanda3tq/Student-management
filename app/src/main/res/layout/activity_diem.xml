<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical"
    tools:context=".diem.DiemActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imgQuayLai"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Kết quả học tập"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgMenu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/graph" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_panel1"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/btnHocKySet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/button_default1"
                    android:elevation="5dp"
                    android:stateListAnimator="@null"
                    android:text="Học kỳ 1"
                    android:textColor="@color/black"
                    app:backgroundTint="@null" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/button_default1"
                    android:elevation="5dp"
                    android:stateListAnimator="@null"
                    android:text="Học kỳ 2"
                    android:textColor="@color/black"
                    app:backgroundTint="@null" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/button_default1"
                    android:elevation="5dp"
                    android:stateListAnimator="@null"
                    android:text="Học kỳ 3"
                    android:textColor="@color/black"
                    app:backgroundTint="@null" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/button_default1"
                    android:elevation="5dp"
                    android:stateListAnimator="@null"
                    android:text="Học kỳ 4"
                    android:textColor="@color/black"
                    app:backgroundTint="@null" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/button_default1"
                    android:elevation="5dp"
                    android:stateListAnimator="@null"
                    android:text="Học kỳ 5"
                    android:textColor="@color/black"
                    app:backgroundTint="@null" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/button_default1"
                    android:elevation="5dp"
                    android:stateListAnimator="@null"
                    android:text="Học kỳ 6"
                    android:textColor="@color/black"
                    app:backgroundTint="@null" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/button_default1"
                    android:elevation="5dp"
                    android:stateListAnimator="@null"
                    android:text="Học kỳ 7"
                    android:textColor="@color/black"
                    app:backgroundTint="@null" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/button_default1"
                    android:elevation="5dp"
                    android:stateListAnimator="@null"
                    android:text="Học kỳ 8"
                    android:textColor="@color/black"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDiemHp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            tools:listitem="@layout/customrv_diem_hoc_phan" />
    </LinearLayout>
</LinearLayout>